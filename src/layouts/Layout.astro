---
import "bootstrap/dist/css/bootstrap.css";
---

<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <title>Fragancia Deluxe</title>
  </head>
  <body class="bg-darkblue">
    <div class="hero Logo text-center pt-4">
      <h3 class="font-bold">
        <strong><span class="gold">Fragancia</span> Deluxe</strong>
      </h3>
    </div>
    <div>
      <slot />
    </div>

<footer class="text-white py-5 border-top">
  <div class="container">
    <div class="row">
      <!-- Columna 1 -->
      <div class="col-md-3">
        <h5>Fragancia Deluxe</h5>
        <ul class="list-unstyled">
          <li><a href="#" class="text-white text-decoration-none">Acerca de</a></li>
          <li><a href="#" class="text-white text-decoration-none">Carreras</a></li>
          <li><a href="#" class="text-white text-decoration-none">Contacto</a></li>
        </ul>
      </div>

      <!-- Columna 2 -->
      <div class="col-md-3">
        <h5>Productos</h5>
        <ul class="list-unstyled">
          <li><a href="#" class="text-white text-decoration-none">Perfumes Hombre</a></li>
          <li><a href="#" class="text-white text-decoration-none">Perfumes Mujer</a></li>
          <li><a href="#" class="text-white text-decoration-none">Ofertas</a></li>
        </ul>
      </div>

      <!-- Columna 3 -->
      <div class="col-md-3">
        <h5>Soporte</h5>
        <ul class="list-unstyled">
          <li><a href="#" class="text-white text-decoration-none">FAQs</a></li>
          <li><a href="#" class="text-white text-decoration-none">Términos</a></li>
          <li><a href="#" class="text-white text-decoration-none">Privacidad</a></li>
        </ul>
      </div>

      <!-- Columna 4 -->
      <div class="col-md-3">
        <h5>Síguenos</h5>
        <a href="#" class="text-white me-2"><i class="bi bi-facebook"></i></a>
        <a href="#" class="text-white me-2"><i class="bi bi-instagram"></i></a>
        <a href="#" class="text-white"><i class="bi bi-twitter"></i></a>
      </div>
    </div>
  </div>
</footer>

  </body>
  <style is:global>
    .gold {
      color: #d9a515;
    }

    .text-darkblue {
      color: #040b12 !important;
    }

    .bg-darkblue {
      background-color: #040b12 !important;
    }

    .bg-darkgreen {
      background-color: #0e171e;
    }

    .bg-gold {
      background-color: #d9a515;
    }

    .bg-dark100 {
      background-color: #000000;
    }
  </style>
  <script
    type="module"
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  ></script>
  <script
    src="https://kit.fontawesome.com/fbdfb4841c.js"
    crossorigin="anonymous"></script>
</html>
