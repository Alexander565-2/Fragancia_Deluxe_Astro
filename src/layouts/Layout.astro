---
import "bootstrap/dist/css/bootstrap.css";
---

<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <title>Fragancia Deluxe</title>
  </head>
  <body class="bg-darkblue">
    <div class="hero Logo text-center pt-4">
      <h3 class="font-bold">
        <strong><span class="gold">Fragancia</span> Deluxe</strong>
      </h3>
    </div>
    <div>
      <slot />
    </div>

<footer class="bg-darkblue text-white pt-5">
  <div class="container">
    <div class="row">

      <!-- Columna 1: Logo y pagos -->
      <div class="col-md-3 mb-4">
        <a href="index.html" class="d-flex align-items-center mb-3 text-white text-decoration-none">
          <img src="icon.png" alt="Fragancias Deluxe" class="img-fluid me-2" style="max-width:7em;">
          <span class="h5 mb-0">Fragancias Deluxe</span>
        </a>
        <p>Perfumería de lujo desde 2025</p>
        <div class="d-flex gap-2 fs-4">
          <i class="fab fa-cc-visa"></i>
          <i class="fab fa-cc-mastercard"></i>
          <i class="fab fa-cc-paypal"></i>
        </div>
      </div>

      <!-- Columna 2: Comprar -->
      <div class="col-md-3 mb-4">
        <h5>Comprar</h5>
        <ul class="list-unstyled">
          <li><a href="#" class="text-white text-decoration-none">Perfumes para Damas</a></li>
          <li><a href="#" class="text-white text-decoration-none">Perfumes para Caballeros</a></li>
          <li><a href="#" class="text-white text-decoration-none">Ofertas Especiales</a></li>
          <li><a href="#" class="text-white text-decoration-none">Nuevos Lanzamientos</a></li>
        </ul>
      </div>

      <!-- Columna 3: Contacto -->
      <div class="col-md-3 mb-4">
        <h5>Contacto</h5>
        <ul class="list-unstyled">
          <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i>Calle Bolivar, Jipijapa, Manabí</li>
          <li class="mb-2"><i class="fas fa-phone me-2"></i><a href="tel:+0985087811" class="text-white text-decoration-none">098 508 781 1</a></li>
          <li class="mb-2"><i class="fas fa-envelope me-2"></i><a href="mailto:osentufa@gmail.com" class="text-white text-decoration-none">osentufa@gmail.com</a></li>
          <li class="mt-3"><i class="fas fa-clock me-2"></i>Horario de atención</li>
          <li>Lunes a Viernes: 8:30am - 7:30pm</li>
          <li>Sábado: 9:00am - 7:30pm</li>
          <li>Domingo: Cerrado</li>
        </ul>
      </div>

      <!-- Columna 4: Redes y apps -->
      <div class="col-md-3 mb-4">
        <h5>Síguenos</h5>
        <div class="d-flex gap-3 mb-3 fs-4">
          <a href="#" class="text-white"><i class="fab fa-facebook-f"></i></a>
          <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
          <a href="#" class="text-white"><i class="fab fa-tiktok"></i></a>
        </div>
        <p>Descarga nuestra app</p>
        <div class="d-flex flex-column gap-2">
          <a href="#" class="btn btn-outline-light btn-sm d-flex align-items-center justify-content-center">
            <i class="fab fa-google-play me-2"></i> Google Play
          </a>
          <a href="#" class="btn btn-outline-light btn-sm d-flex align-items-center justify-content-center">
            <i class="fab fa-apple me-2"></i> App Store
          </a>
        </div>
      </div>

    </div>

    <!-- Copyright -->
    <div class="border-top border-secondary pt-3 mt-3 text-center">
      <p class="mb-1">© 2025 Fragancias Deluxe. Todos los derechos reservados.</p>
      <div class="d-flex justify-content-center gap-2 flex-wrap">
        <a href="#" class="text-white text-decoration-none">Términos y condiciones</a> |
        <a href="#" class="text-white text-decoration-none">Política de privacidad</a> |
        <a href="#" class="text-white text-decoration-none">Aviso legal</a>
      </div>
    </div>
  </div>
</footer>

  </body>
  <style is:global>
    .gold {
      color: #d9a515;
    }

    .text-darkblue {
      color: #040b12 !important;
    }

    .bg-darkblue {
      background-color: #040b12 !important;
    }

    .bg-darkgreen {
      background-color: #0e171e;
    }

    .bg-gold {
      background-color: #d9a515;
    }

    .bg-dark100 {
      background-color: #000000;
    }
  </style>
  <script
    type="module"
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  ></script>
  <script
    src="https://kit.fontawesome.com/fbdfb4841c.js"
    crossorigin="anonymous"></script>
</html>
