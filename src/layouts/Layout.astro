---
import "bootstrap/dist/css/bootstrap.css";
---

<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <title>Fragancia Deluxe</title>
  </head>
  <body class="bg-darkblue">
    <div class="hero Logo text-center pt-4">
      <h3 class="font-bold">
        <strong><span class="gold">Fragancia</span> Deluxe</strong>
      </h3>
    </div>
    <div>
      <slot />
    </div>

    <footer class="footer-perfumeria">
      <div class="py-3 border-top">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-md-6">
              <p class="mb-0 text-white">
                &copy; 2024 Fragancia Deluxe. Todos los derechos reservados.
              </p>
            </div>
            <div class="col-md-6 text-md-end">
              <small>
                <a href="#" class="text-light me-3 text-decoration-none"
                  >Política de Privacidad</a
                >
                <a href="#" class="text-light me-3 text-decoration-none"
                  >Términos de Uso</a
                >
                <a href="#" class="text-light text-decoration-none">Cookies</a>
              </small>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
  <style is:global>
    .gold {
      color: #d9a515;
    }

    .text-darkblue {
      color: #040b12 !important;
    }

    .bg-darkblue {
      background-color: #040b12 !important;
    }

    .bg-darkgreen {
      background-color: #0e171e;
    }

    .bg-gold {
      background-color: #d9a515;
    }

    .bg-dark100 {
      background-color: #000000;
    }
  </style>
  <script
    type="module"
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  ></script>
  <script
    src="https://kit.fontawesome.com/fbdfb4841c.js"
    crossorigin="anonymous"></script>
</html>
