---
import "bootstrap/dist/css/bootstrap.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <title>Fragancia Deluxe</title>
  </head>
  <body>
    <div class="hero Logo text-center pt-4">
      <h3>Fragancia Deluxe</h3>
    </div>
    <div class="container">
      <slot />
    </div>

    <footer class="footer-perfumeria">
      <div class="container">
        <div class="row">
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="d-flex align-items-center mb-2">
              <i class="fas fa-map-marker-alt perfume-icon"></i>
              <span>Av. Principal 123, Centro Comercial Plaza</span>
            </div>
            <div class="d-flex align-items-center mb-2">
              <i class="fas fa-phone perfume-icon"></i>
              <span>+1 (555) 123-4567</span>
            </div>
            <div class="d-flex align-items-center">
              <i class="fas fa-envelope perfume-icon"></i>
              <span>info@perfumeriaelegance.com</span>
            </div>
          </div>

          <div class="col-lg-2 col-md-6 mb-4">
            <h5>Navegación</h5>
            <ul class="list-unstyled">
              <li class="mb-2">
                <a href="/"><i class="fas fa-chevron-right me-2"></i>Inicio</a>
              </li>
              <li class="mb-2">
                <a href="#"
                  ><i class="fas fa-chevron-right me-2"></i>Catálogo</a>
              </li>
              <li class="mb-2">
                <a href="#About"
                  ><i class="fas fa-chevron-right me-2"></i>Sobre Nosotros</a>
              </li>
            </ul>
          </div>

          <div class="col-lg-2 col-md-6 mb-4">
            <h5>Categorías</h5>
            <ul class="list-unstyled">
              <li class="mb-2">
                <a href="#Mujer"><i class="fas fa-venus me-2"></i>Perfumes Mujer</a>
              </li>
              <li class="mb-2">
                <a href="#Hombre"><i class="fas fa-mars me-2"></i>Perfumes Hombre</a>
              </li>
            </ul>
          </div>

          <div class="col-lg-4 col-md-6 mb-4">
            <div class="mt-4">
              <h6 class="mb-3">Horarios de Atención</h6>
              <div class="d-flex justify-content-between mb-1">
                <span>Lunes - Viernes:</span>
                <span>9:00 AM - 8:00 PM</span>
              </div>
              <div class="d-flex justify-content-between mb-1">
                <span>Sábados:</span>
                <span>9:00 AM - 6:00 PM</span>
              </div>
              <div class="d-flex justify-content-between">
                <span>Domingos:</span>
                <span>10:00 AM - 4:00 PM</span>
              </div>
            </div>
          </div>
        </div>

        <div class="footer-bottom">
          <div class="row align-items-center">
            <div class="col-md-6">
              <p class="mb-0">
                &copy; 2024 Perfumería Elegance. Todos los derechos reservados.
              </p>
            </div>
            <div class="col-md-6">
              <div class="social-icons text-md-end">
                <a href="#" title="Facebook"
                  ><i class="fab fa-facebook-f"></i></a
                >
                <a href="#" title="Instagram"
                  ><i class="fab fa-instagram"></i></a
                >
                <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                <a href="#" title="YouTube"><i class="fab fa-youtube"></i></a>
                <a href="#" title="WhatsApp"><i class="fab fa-whatsapp"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
  <script
    type="module"
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  ></script>
  <script
    src="https://kit.fontawesome.com/fbdfb4841c.js"
    crossorigin="anonymous"></script>
</html>
