        <button class="btn btn-primary">Ver Catalogo</button>
      </div>
    </div>
    <div class="d-flex flex-row-reverse gap-4 justify-content-around">
      <div class="" style="width: 26em;">
        <Carousel id="Mujer" slides={slidesMen} />
      </div>
      <div class="w-50 d-flex flex-column gap-2">
